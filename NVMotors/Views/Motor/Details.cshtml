@using NVMotors.Web.ViewModels.Motor;
@model MotorDetailsViewModel

@{
    ViewData["Title"] = "Motor Details";
}

<h1 class="text-center mt-5"> Details: @Model.Make @Model.Model </h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body position-relative">

                    <h2 class="card-title text-center">@Model.Make @Model.Model (@Model.Year)</h2>
                    <h4 class="card-title text-center">Category: @Model.Category</h4>
                    <p class="text-center text-muted">Detailed specifications of the motor</p>
                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5><i class="bi bi-car-front"></i> Engine</h5>
                                <p><strong>Horsepower:</strong> @Model.HorsePower hp</p>
                                <p><strong>Engine Displacement:</strong> @Model.EngineDisplacement cm³</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5><i class="bi bi-gear"></i> Transmission & Fuel</h5>
                                <p><strong>Transmission Type:</strong> @Model.TransmissionType</p>
                                <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5><i class="bi bi-paint-bucket"></i> Appearance</h5>
                                <p><strong>Color:</strong> @Model.Color</p>
                                <p><strong>Condition:</strong> @Model.Condition</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <a href="@Url.Action("Edit", "Motor", new { id = Model.Id })"
                                   class="btn btn-info btn-lg w-100">Edit</a>
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Delete", "Motor", new { id = Model.Id })"
                                   class="btn btn-danger btn-lg w-100">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
