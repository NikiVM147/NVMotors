@using NVMotors.Web.ViewModels.Motor;
@model IEnumerable<MotorIndexViewModel>

@{
    ViewData["Title"] = "Motors Available";
}

<h1 class="text-center mt-3">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var motor in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@motor.Make @motor.Model</h5>
                            <p class="card-text">
                                <strong>Year:</strong> @motor.Year
                            </p>

                            <a href="@Url.Action("Details", "Motor", new { id = motor.Id })"
                               class="btn btn-primary mb-2">
                                Details
                            </a>
                            <a href="@Url.Action("CreateAd", "Motor", new { id = motor.Id })"
                               class="btn btn-success mt-auto">
                                Create Ad
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No motors available.</p>
            </div>
        }
    </div>
</div>
