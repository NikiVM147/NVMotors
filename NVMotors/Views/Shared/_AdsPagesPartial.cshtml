@model NVMotors.Web.ViewModels.Ad.AdViewModel
<div class="row mt-4">
    <div class="col-md-12">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("IndexAds", new {
                            page = Model.CurrentPage - 1,
                            searchQuery = Model.SearchQuery,
                            MinYear = Model.FilterModel.MinYear,
                            MaxYear = Model.FilterModel.MaxYear,
                            MinPrice = Model.FilterModel.MinPrice,
                            MaxPrice = Model.FilterModel.MaxPrice,
                            TransmissionType = Model.FilterModel.TransmissionType,
                            FuelType = Model.FilterModel.FuelType,
                            Color = Model.FilterModel.Color,
                            Condition = Model.FilterModel.Condition,
                            Town = Model.FilterModel.Town,
                            MinHorsePower = Model.FilterModel.MinHorsePower,
                            MaxHorsePower = Model.FilterModel.MaxHorsePower,
                            MinEngineDisplacement = Model.FilterModel.MinEngineDisplacement,
                            MaxEngineDisplacement = Model.FilterModel.MaxEngineDisplacement
                        })">Previous</a>
                    </li>
                }

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("IndexAds", new {
                            page = i,
                            searchQuery = Model.SearchQuery,
                            MinYear = Model.FilterModel.MinYear,
                            MaxYear = Model.FilterModel.MaxYear,
                            MinPrice = Model.FilterModel.MinPrice,
                            MaxPrice = Model.FilterModel.MaxPrice,
                            TransmissionType = Model.FilterModel.TransmissionType,
                            FuelType = Model.FilterModel.FuelType,
                            Color = Model.FilterModel.Color,
                            Condition = Model.FilterModel.Condition,
                            Town = Model.FilterModel.Town,
                            MinHorsePower = Model.FilterModel.MinHorsePower,
                            MaxHorsePower = Model.FilterModel.MaxHorsePower,
                            MinEngineDisplacement = Model.FilterModel.MinEngineDisplacement,
                            MaxEngineDisplacement = Model.FilterModel.MaxEngineDisplacement
                        })">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("IndexAds", new {
                            page = Model.CurrentPage + 1,
                            searchQuery = Model.SearchQuery,
                            MinYear = Model.FilterModel.MinYear,
                            MaxYear = Model.FilterModel.MaxYear,
                            MinPrice = Model.FilterModel.MinPrice,
                            MaxPrice = Model.FilterModel.MaxPrice,
                            TransmissionType = Model.FilterModel.TransmissionType,
                            FuelType = Model.FilterModel.FuelType,
                            Color = Model.FilterModel.Color,
                            Condition = Model.FilterModel.Condition,
                            Town = Model.FilterModel.Town,
                            MinHorsePower = Model.FilterModel.MinHorsePower,
                            MaxHorsePower = Model.FilterModel.MaxHorsePower,
                            MinEngineDisplacement = Model.FilterModel.MinEngineDisplacement,
                            MaxEngineDisplacement = Model.FilterModel.MaxEngineDisplacement
                        })">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
