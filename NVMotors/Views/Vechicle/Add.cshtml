@model NVMotors.Web.ViewModels.VechicleAddViewModel

@{
    ViewData["Title"] = "Добавяне на Превозно Средство";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Make" class="control-label">Марка:</label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label">Модел:</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label">Година на производство:</label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HorsePower" class="control-label">Конски сили:</label>
        <input asp-for="HorsePower" type="number" class="form-control" />
        <span asp-validation-for="HorsePower" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TransmissionType" class="control-label">Тип трансмисия:</label>
        <input asp-for="TransmissionType" class="form-control" />
        <span asp-validation-for="TransmissionType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedFuelType" class="control-label">Изберете Тип Гориво:</label>
        <select asp-for="SelectedFuelType" asp-items="Model.FuelTypes" class="form-control">
            <option value="">-- Изберете тип гориво --</option>
        </select>
        <span asp-validation-for="SelectedFuelType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedColor" class="control-label">Изберете Цвят:</label>
        <select asp-for="SelectedColor" asp-items="Model.Colors" class="form-control">
            <option value="">-- Изберете цвят --</option>
        </select>
        <span asp-validation-for="SelectedColor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedCondition" class="control-label">Изберете Състояние:</label>
        <select asp-for="SelectedCondition" asp-items="Model.Conditions" class="form-control">
            <option value="">-- Изберете състояние --</option>
        </select>
        <span asp-validation-for="SelectedCondition" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
